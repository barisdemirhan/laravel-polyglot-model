{
    "name": "barisdemirhan/laravel-polyglot-model",
    "description": "Elegant model translations for Laravel with polymorphic storage and eager loading support",
    "keywords": [
        "laravel",
        "translations",
        "i18n",
        "multilingual",
        "eloquent",
        "trait",
        "localization",
        "polyglot"
    ],
    "homepage": "https://github.com/barisdemirhan/laravel-polyglot-model",
    "license": "MIT",
    "authors": [
        {
            "name": "Barış Demirhan",
            "email": "hello@barisdemirhan.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "phpunit/phpunit": "^10.0|^11.0",
        "laravel/pint": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "PolyglotModel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PolyglotModel\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "PolyglotModel\\PolyglotModelServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
